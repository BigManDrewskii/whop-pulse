# Whop API Configuration
WHOP_API_KEY=your_whop_api_key_here
NEXT_PUBLIC_WHOP_APP_ID=app_xxxxxxxxxxxxx
NEXT_PUBLIC_WHOP_COMPANY_ID=biz_xxxxxxxxxxxxx
NEXT_PUBLIC_WHOP_AGENT_USER_ID=user_xxxxxxxxxxxxx
WHOP_CLIENT_SECRET=your_client_secret_here
NEXT_PUBLIC_WHOP_CLIENT_ID=app_xxxxxxxxxxxxx

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Supabase Configuration
# Note: For JS client, use the regular REST API URL
# Connection pooling is handled automatically by Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (NEVER expose to client! Only for server-side scripts)
# Get this from: Supabase Dashboard > Project Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Whop Webhook Secret (for real-time member updates)
# Generate with: openssl rand -hex 32
# Configure in: Whop Dashboard > Developer > Webhooks
WHOP_WEBHOOK_SECRET=your_webhook_secret_here

# Cron Job Secret (for daily snapshots)
# Generate with: openssl rand -hex 32
# Used by: /api/cron/daily-snapshot
CRON_SECRET=your_cron_secret_here
